<style type="text/css">



#partnership-form p.error {
	margin-left: 9px;
	width: auto;
	display: inline;
	color: red;
}
</style>
  <script>
  $(document).ready(function(){
  	 $("#partnership-form").validate();
  });
  </script>
<% title "Edit Partnership Deed" %>



<%= nested_form_for @partnership_deed,:html=>{:id=>"partnership-form"} do |f| %>

<div class="row button-box top">
	<div class="span9" style="text-align:right;">
		<% unless @partnership_deed.new_record?%>
			<button type="submit" class="btn btn-success"><i class="icon-edit icon-white"></i>&nbsp;Update</button>
		<% else %>
			<button type="submit" class="btn btn-success"><i class="icon-plus icon-white"></i>&nbsp;Add</button>
		<% end %>
		<a href="/partnership_deeds" class="btn btn-inverse"><i class="icon-remove icon-white"></i>&nbsp;Cancel</a>
	</div>
</div>	
<div class="msi-list details-view">
	
	 <div style="color:violet;display:table;font-size:20px;font-style:italic;font-weight: bold;padding-bottom: 10px;padding-left:10px;padding-top:10px">Edit Information relating to Partnership Firm</div>
	<div class="row">
		<div class="span4">
			Customer: 
		</div>
		
		<div class="span4">
			 <%=select("partnership_deed", "user_id", User.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'Select Customer'})%>
		</div>
	</div>
	<div class="row">
		<div class="span4">
			Firm Name: 
		</div>
		
		<div class="span4">
			 <%= f.text_field :firm_name,  :placeholder=>"  Proposed name for the firm", :class=>"required"%>
		</div>
	</div>
	<div class="row">
		<div class="span4">
			Firm Registration no: 
		</div>
		
		<div class="span4">
			 <%= f.text_field :registration_number,  :placeholder=>"  Registration Number"%>
		</div>
	</div>
	<div class="row">
		<div class="span4">
			Date of Registration: 
		</div>
		
		<div class="span4">
			<div id="datepicker"></div>
			 <%= f.text_field :date_of_registration%>
		</div>
	</div>
	<div class="row">
		<div class="span4">
			Renewal Receipt No: 
		</div>
		
		<div class="span4">
			<div id="datepicker"></div>
			 <%= f.text_field :renewal_receipt_no%>
		</div>
	</div>
	<div class="row">
		<div class="span4">
			Address Line 1: 
		</div>
		<div class="span4">
			
			<%= f.text_field :firm_address , :class=>"required"%><br /><em class="note">Street address, P.O. box, company name, c/o</em>
		</div>
	</div>
	<div class="row">
		<div class="span4">
			Address Line 2: 
		</div>
		<div class="span4">
			<%= f.text_field :firm_address1 %><br /><em class="note">Apartment, suite, unit, building, floor etc</em>
		</div>
	</div>
	<div class="row">
		<div class="span4">
			Filled by: 
		</div>
		<div class="span4">
			<%= f.text_field :filled_by ,  :placeholder=>"  Filled By Name and Address" , :class=>"required"%>
		</div>
	</div>			
	<div class="row">
		<div class="span4">
			Duration: 
		</div>
		<div class="span4">
			<div id="datepicker"></div>
    		<%= f.text_field :duration , :class=>"required" %>
		</div>
	</div>	
	
    
	
</div>
<div class="row button-box bottom">
	<div class="span9" style="text-align:right;">
		<% unless @partnership_deed.new_record?%>
			<button type="submit" class="btn btn-success"><i class="icon-edit icon-white"></i>&nbsp;Update</button>
		<% else %>
			<button type="submit" class="btn btn-success"><i class="icon-plus icon-white"></i>&nbsp;Add</button>
		<% end %>
		<a href="/partnership_deeds" class="btn btn-inverse"><i class="icon-remove icon-white"></i>&nbsp;Cancel</a>
	</div>
</div>
<% end %>


